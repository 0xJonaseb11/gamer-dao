pragma solidity 0.8.19;

import "../IDAOVoting.sol";

/**
 * @title IVotingFactory
 * @dev Interface for a contract factory that deploys instances of `IDAOVoting`.
 */
interface IVotingFactory {
    struct ConstructorParams {
        address daoRegistry;
    }

    event DeployedDAOVoting(address votingAddress, IDAOVoting.ConstructorParams);

    /**
     * @dev Deploys a PublicBeaconProxy that as the implementation uses the DAOVoting contract.
     * @param params_ A `ConstructorParams` struct containing the constructor parameters for `DAOVoting`.
     * @return The address of the newly deployed `DAOVoting` contract.
     */
    function deployDAOVoting(
        IDAOVoting.ConstructorParams calldata params_,
        string calldata votingName_
    ) external returns (address);
}
