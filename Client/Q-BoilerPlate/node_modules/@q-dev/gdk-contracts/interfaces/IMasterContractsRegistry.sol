pragma solidity 0.8.19;

/**
 * @title IMasterContractsRegistry
 */
interface IMasterContractsRegistry {
    /**
     * @dev Returns the address of the master DAO factory contract.
     * @return The address of the master DAO factory contract.
     */
    function getMasterDAOFactory() external view returns (address);

    /**
     * @dev Returns the address of the master DAO registry contract.
     * @return The address of the master DAO registry contract.
     */
    function getMasterDAORegistry() external view returns (address);

    /**
     * @dev Returns the address of the token factory contract.
     * @return The address of the token factory contract.
     */
    function getTokenFactory() external view returns (address);

    /**
     * @dev Returns the address of the token registry contract.
     * @return The address of the token registry contract.
     */
    function getTokenRegistry() external view returns (address);
}
