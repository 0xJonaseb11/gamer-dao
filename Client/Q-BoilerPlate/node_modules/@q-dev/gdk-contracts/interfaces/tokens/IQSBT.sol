pragma solidity 0.8.19;

import "@openzeppelin/contracts-upgradeable/token/ERC721/extensions/IERC721EnumerableUpgradeable.sol";

import "./IERC5484.sol";

/**
 * @title IQSBT
 * @dev Interface for a QSBT token contract.
 */
interface IQSBT is IERC721EnumerableUpgradeable, IERC5484 {
    /**
     * @dev Struct to pass constructor parameters to the IQSBT implementation contract.
     * @param name The name of the QSBT token.
     * @param symbol The symbol of the QSBT token.
     * @param contractURI The URI of the contract metadata.
     * @param baseURI The base URI for the token metadata.
     * @param totalSupplyCap The maximum total supply for the QSBT token.
     */
    struct ConstructorParams {
        string name;
        string symbol;
        string contractURI;
        string baseURI;
        uint256 totalSupplyCap;
    }

    /**
     * @dev Mints a new QSBT token to the specified receiver address.
     * @param receiver_ The address of the receiver of the new QSBT token.
     * @param tokenId_ The ID of the new QSBT token.
     * @param tokenURI_ The URI for the metadata of the new QSBT token.
     * @param burnAuth_ The burn authorization for the new QSBT token.
     */
    function mintTo(
        address receiver_,
        uint256 tokenId_,
        string calldata tokenURI_,
        BurnAuth burnAuth_
    ) external;

    /**
     * @dev Burns an existing QSBT token.
     * @param tokenId_ The ID of the QSBT token to burn.
     */
    function burn(uint256 tokenId_) external;

    /**
     * @dev Sets the base URI for the QSBT token metadata.
     * @param baseURI_ The new base URI for the token metadata.
     */
    function setBaseURI(string calldata baseURI_) external;

    /**
     * @dev Sets the token URI for an existing QSBT token.
     * @param tokenId_ The ID of the QSBT token to update.
     * @param tokenURI_ The new URI for the token metadata.
     */
    function setTokenURI(uint256 tokenId_, string calldata tokenURI_) external;
}
